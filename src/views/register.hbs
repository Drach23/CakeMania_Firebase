<form class="formRegister" id="form" action="/new-user" method="POST">
    <div class="formTittle">
        <h4>Registrate</h4>
    </div>
    <h4>Informacion personal</h4>
    <input class="controls" type="text" name="firstname" id="inputName" placeholder="Ingresa tu nombre"
        value="{{user.firstname}}" autocomplete="nope">

    <input class="controls" type="text" name="lastname" id="inputLastname" placeholder="Ingresa tus apellidos"
        value="{{user.lastname}}" autocomplete="nope">
    <input class="controls" type="number" name="phone" id="inputPhone" placeholder="Ingresa tu numero de telefono"
        value="{{user.phone}}" autocomplete="nope">
    <input class="controls" type="email" name="email" id="inputEmail" placeholder="Ingresa tu correo electronico"
        value="{{user.email}}" autocomplete="uwu">
    <h4>Usuario y contraseña</h4>
    <input class="controls" type="text" name="username" id="inputUsername" placeholder="Ingresa tu nombre de usuario"
        value="{{user.username}}" autocomplete="nope">
    <input class="controls" type="password" name="password" id="inputPassword" placeholder="Ingresa una contraseña">
    <input class="controls" type="password" name="confirmPassword" id="inputConfirmPassword"
        placeholder="Confirma tu contraseña">
    <button  class="buttons" type="button">CREAR CUENTA</button>
    <div id="successMessage" class="success-message"></div>
    <div id="errorMessage" class="error-message"></div>
    <div class="login-section">
        <p>¿Ya tienes una cuenta? <a href="./login">Inicia sesión aquí</a></p>
    </div>
</form>
